<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAccountActivity"
    android:layout_marginLeft="16dp"
    android:orientation="vertical"
    android:layout_marginStart="16dp">

    <com.example.arsalan.k_books.FontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="24dp"
        android:text="@string/create_acc"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="30sp"
        />
    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:id="@+id/txt_view"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="24dp"-->
        <!--android:letterSpacing="0"-->
        <!--android:text="@string/create_acc"-->
        <!--android:textAllCaps="true"-->
        <!--android:textColor="#000000"-->
        <!--android:textSize="30sp" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    >

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/details_layout">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="1dp"
                                >
                                <FrameLayout
                                    android:layout_width="50dp"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/top_rounded_image">
                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center|center_vertical"
                                        android:src="@drawable/baseline_person_black_18dp"
                                        />
                                </FrameLayout>

                                <EditText
                                    android:layout_width="match_parent"
                                    android:hint="Enter User Name"
                                    style="@style/text_field_style"
                                    android:background="@drawable/top_rounded_edit_text"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="1dp"
                                >
                                <FrameLayout
                                    android:layout_width="50dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/color_img">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center|center_vertical"
                                        android:src="@drawable/baseline_email_black_18dp"
                                        />
                                </FrameLayout>

                                <EditText
                                    android:layout_width="match_parent"
                                    android:hint="Enter Email Id"
                                    style="@style/text_field_style"
                                    android:background="@color/color_edit_txt"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="1dp"
                                >
                                <FrameLayout
                                    android:layout_width="50dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/color_img">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center|center_vertical"
                                        android:src="@drawable/baseline_call_black_18dp"
                                        />
                                </FrameLayout>
                                <EditText
                                    android:layout_width="match_parent"
                                    android:hint="Enter Phone Number"
                                    style="@style/text_field_style"
                                    android:background="@color/color_edit_txt"/>
                            </LinearLayout>




                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="1dp"
                                >
                                <FrameLayout
                                    android:layout_width="50dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/color_img">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center|center_vertical"
                                        android:src="@drawable/baseline_lock_black_18dp"
                                        />
                                </FrameLayout>
                                <EditText
                                    android:layout_width="match_parent"
                                    android:hint="Enter Password"
                                    android:background="@color/color_edit_txt"
                                    style="@style/text_field_style" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"

                                >
                                <FrameLayout
                                    android:layout_width="50dp"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/bottom_rounded_image">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center|center_vertical"
                                        android:src="@drawable/baseline_lock_black_18dp"
                                        />
                                </FrameLayout>

                                <EditText
                                    android:layout_width="match_parent"
                                    android:hint="Re-Enter Password"
                                    style="@style/text_field_style"
                                    android:background="@drawable/bottom_rounded_edit_text"/>
                            </LinearLayout>





                        </LinearLayout>



                    </RelativeLayout>


                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingTop="7dp">
                <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/asset7"
                />
                </FrameLayout>

            </LinearLayout>

        </RelativeLayout>












    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="33dp">
        <Button
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="16dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Create"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="26sp"
            android:background="@drawable/rounded_btn" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/have_email"
                android:textSize="20sp"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/login"
                android:textColor="@color/color_img"
                android:textSize="22sp"
                android:linksClickable="true"
                android:id="@+id/login_txt"/>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>